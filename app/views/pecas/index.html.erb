<%= form_tag(pecas_path, method: :get) do %>
  <p> Filtrar por:
    <%= radio_button_tag 'search_type', 'fornecedor_nome', true %>
    Fornecedor
    <%= text_field_tag 'search', nil, placeholder: 'Digite o fornecedor...' %>
    <%= submit_tag "Filtrar" %>
  </p>
<% end %>

<h1>Pecas</h1>

<div id="pecas">
  <% @pecas.each do |peca| %>
    <%= render peca %>
    <p>
      <%= link_to "Show this peca", peca %>
    </p>
  <% end %>
</div>

<%= link_to "New peca", new_peca_path %>
