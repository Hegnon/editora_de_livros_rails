      <div><%= link_to "Livros", livros_path %></div>
      <div><%= link_to "Fornecedores", fornecedors_path %></div>
      <div><%= link_to "Contas", accounts_path %></div>
      <div><%= link_to "Peças", pecas_path %></div>
      <div><%= link_to "Montagens", montagems_path %></div>


      <!-- Adicione mais links do menu conforme necessário -->      
