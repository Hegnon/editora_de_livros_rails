<!DOCTYPE html>
<html>
  <head>
    <title>Minha Aplicação</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div class="sidebar">
      <!-- Conteúdo do menu lateral aqui -->
      <div><%= link_to "Home", root_path %></div>
